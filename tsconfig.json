{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["es2020", "dom"],
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "node",
        //"noEmit": true,
        "noEmitOnError": true,
        "noEmitHelpers": false
        "noImplicitAny": false,
        "removeComments": false,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "exclude": ["node_modules"],
    "include": ["src/legacy/globals.d.ts", "./src/"]
}
