{
    "compilerOptions": {
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        //"allowJs": true,
        //"checkJs": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "es6",
        //"noEmit": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": false
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/globals.d.ts",
        "./src/"
    ]
}
