{
    "name": "mangaonlineviewer",
    "version": "22.1.0",
    "description": "Userscript that helps to read Manga faster by loading all the pages at once",
    "scripts": {
        "build": "gulp build",
        "release": "gulp release"
    },
    "author": "TagoDR",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TagoDR/MangaOnlineViewer.git"
    },
    "keywords": [
        "manga",
        "reader",
        "viewer",
        "online",
        "loader"
    ],
    "bugs": {
        "url": "https://github.com/TagoDR/MangaOnlineViewer/issues"
    },
    "homepage": "https://github.com/TagoDR/MangaOnlineViewer#readme",
    "devDependencies": {
        "@rbnlffl/rollup-plugin-eslint": "^3.0.0",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@types/jquery": "^3.5.14",
        "@types/node": "^17.0.35",
        "@types/nprogress": "^0.2.0",
        "@types/tampermonkey": "^4.0.5",
        "@typescript-eslint/eslint-plugin": "^5.25.0",
        "@typescript-eslint/parser": "^5.25.0",
        "esbuild": "^0.14.39",
        "eslint": "^8.15.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "^4.5.0",
        "gulp": "^4.0.2",
        "gulp-file": "^0.4.0",
        "gulp-preprocess": "^4.0.2",
        "gulp-prettier": "^4.0.0",
        "live-server": "^1.2.2",
        "prettier": "^2.6.2",
        "rollup": "^2.74.1",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-exclude-dependencies-from-bundle": "^1.1.22",
        "rollup-plugin-string-html": "^1.0.0",
        "rollup-plugin-typescript": "^1.0.1",
        "ts-import": "^2.0.40",
        "typescript": "^4.6.4",
        "userscript-meta": "^1.0.1"
    },
    "dependencies": {
        "@claviska/jquery-minicolors": "^2.3.6",
        "color-scheme": "^1.0.1",
        "imagesloaded": "^5.0.0",
        "jquery": "^3.6.0",
        "jquery-minicolors": "^2.1.10",
        "jszip": "^3.9.1",
        "nprogress": "^0.2.0",
        "sweetalert2": "^11.4.14",
        "unveil2": "^2.0.8"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 100
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2020,
            "project": [
                "./tsconfig.json"
            ]
        },
        "env": {
            "browser": true,
            "commonjs": true,
            "es6": true,
            "jquery": true,
            "greasemonkey": true
        },
        "globals": {
            "W": "readonly",
            "$": "readonly",
            "JSZip": "readonly",
            "NProgress": "readonly",
            "jscolor": "readonly",
            "ColorScheme": "readonly",
            "Swal": "readonly"
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "airbnb",
            "airbnb-typescript",
            "prettier"
        ],
        "plugins": [
            "import",
            "@typescript-eslint",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "warn"
            ],
            "max-len": "off",
            "linebreak-style": [
                "off",
                "windows"
            ],
            "no-console": "warn",
            "prefer-destructuring": [
                "error",
                {
                    "object": true,
                    "array": false
                }
            ],
            "function-paren-newline": "off",
            "import/extensions": [
                "warn",
                "always",
                {
                    "ignorePackages": true
                }
            ]
        }
    },
    "eslintIgnore": [
        "node_modules",
        "*.min.js",
        "dist/**",
        "gulpfile.js",
        "Manga_OnlineViewer.meta.js",
        "Manga_OnlineViewer.user.js",
        "Manga_OnlineViewer_Adult.meta.js",
        "Manga_OnlineViewer_Adult.user.js"
    ]
}
